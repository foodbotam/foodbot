<%- include('header.ejs') %>
  <style>
  #navbar-devicecontrol-text {
    color: #00adb5 !important;
  }
  #edit-container{
    background-color: lime;
    border: 0;
    width: 90%;
    margin-left: 5%;
    margin-top: 1%;
    border-radius: 10px;
    text-transform: capitalize;
  }
  #edit-container:hover{
    background-color: rgb(38, 116, 38);
    border: 0;
  }
 
  .container-image {
    height: 100%;
    margin-left: 0%;
    display: table-cell;
    float: left;
  }
  .container-name{
    float: right;
    color: white;
    font-weight: bolder;
    font-size: 1.9vw;
    text-transform: capitalize;
    vertical-align: bottom;
  }
  .container-number{
    float: right;
    font-size: 0.5vw;
    color: yellow;
    vertical-align: bottom;
  }
  .container-div:hover{
    height: 20vh; 
    background-color: green;
    cursor: pointer;
  }
  #elements-place{
    width: 30vw;
    height: auto;
    background-color: gray;
    margin: auto;
    text-align: center;
    border-radius: 15px;
  }
.container-text {
  display: flex;
}







.containerContent{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 4vw;
  padding-bottom: 400px;
}
.containerWrapper{
  background: goldenrod;
  width: 20.5vw;
  height: 10vw;
  margin-right: 2vw;
  margin-bottom: 1.5vw;
  border-radius: 15px;
}
.containerItem {
  display: flex;
}
.containerImage {
  width: 50%;
  height: 100%;
  padding: 5px;
}
.containerImage  img{
  width: 100%;
  height: 100%;
  object-fit: scale-down;
}
.containerInfo {
  display: flex;
  flex-direction: column;
  width: 50%;
  padding: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.showSandwich {
  display: none;

}

.containerWrapper:hover{
  background: green;
  transition: all .3 linear;

}
.containerWrapper:hover .showSandwich{
  display: block;
  color: white
}
  </style>
  <div style="position: relative; min-height: 100vh;"> 
    <title>Device control - Foodbot</title>
    <button type="button" onclick="window.location.href = '/editcontainers'" class="btn btn-primary btn-lg btn-block" onclick="window.location.replace('/devicecontrol')" id="edit-container"><%= translated[language]["edit_containers"] %></button>
    
    <div class="containerContent">
      <div id="container-1"  class="containerWrapper" onclick="add_element(this.id);">
        <div class="containerItem">
          <div class="containerImage"> 
            <img src="<%= data["container_1"]["layer_image_path"] %>" alt="">
          </div>
          <div class="containerInfo">
            <div class="container-name"><%= translated[language][data["container_1"]["name"]] %></div>
            <div class="container-number"><%= translated[language]["container"] %> 1</div>          
          </div>
        </div>
        <div class="showSandwich"><%= translated[language]["click_to_add"] %></div>
      </div>

      <div id="container-2" class="containerWrapper"  onclick="add_element(this.id);">
        <div class="containerItem">
          <div class="containerImage"> 
            <img src="<%= data["container_2"]["layer_image_path"] %>" alt="">
          </div>
          <div class="containerInfo">
            <div class="container-name"><%= translated[language][data["container_2"]["name"]] %></div>
            <div class="container-number"><%= translated[language]["container"] %> 1</div>
          </div>
        </div>
        <div class="showSandwich"><%= translated[language]["click_to_add"] %></div>
      </div>

      <div id="container-3" class="containerWrapper"  onclick="add_element(this.id);">
        <div class="containerItem">
          <div class="containerImage"> 
            <img src="<%= data["container_3"]["layer_image_path"] %>" alt="">
          </div>
          <div class="containerInfo">
            <div class="container-name"><%= translated[language][data["container_3"]["name"]] %></div>
            <div class="container-number"><%= translated[language]["container"] %> 1</div>
          </div>
        </div>
        <div class="showSandwich"><%= translated[language]["click_to_add"] %></div>
      </div>


      <div id="container-4" class="containerWrapper"  onclick="add_element(this.id);">
        <div class="containerItem">
          <div class="containerImage"> 
            <img src="<%= data["container_3"]["layer_image_path"] %>" alt="">
          </div>
          <div class="containerInfo">
            <div class="container-name"><%= translated[language][data["container_3"]["name"]] %></div>
            <div class="container-number"><%= translated[language]["container"] %> 1</div>
          </div>
        </div>
        <div class="showSandwich"><%= translated[language]["click_to_add"] %></div>
      </div>
      <div id="elements-place"></div>
  </div>.

  <div class="footer">
    <%- include('footer.ejs') %>
  </div>
  </div>

    <script>
var div = document.getElementById("elements-place");
function insertAfter(referenceNode, newNode) {
  referenceNode.parentNode.insertBefore(newNode, referenceNode.nextSibling);
} 
function add_element(id)
{
  console.log(id);
  let element = document.createElement("img");
  element.style.cssText = `width: 20vw; height: 13vw;`
  div.prepend(element)
  switch (id) {
    case "container-1":
      element.src = "<%= data['container_1']['layer_image_path'] %>"
      break;
    
    case "container-2":
      element.src = "<%= data['container_2']['layer_image_path'] %>"
      break;

    case "container-3":
      element.src = "<%= data['container_3']['layer_image_path'] %>"
      break;
  
    default:
      break;
  }
}
    </script>

