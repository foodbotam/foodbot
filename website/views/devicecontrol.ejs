    font-size: calc(18px + .5vw);
    text-transform: capitalize;
    vertical-align: bottom;
  }
.showSandwich {
  display: none;
  color: white;
  font-size: 16px;
  text-align: center;
  height: 3s vw;

}

.containerWrapper:hover{
  background: green;
  height: 13vw
}
.containerWrapper:hover .showSandwich{
  display: block !important;
  color: white
}
#back-step{
  width: 10%;
  font-size: 5vw !important;
}

.defaultElement {
