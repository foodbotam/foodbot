    <% if(language=="am"){ %>
      <h2 class="container-number">Տարրա 2</h2>
    <% } %>
    <img src="<%= data["container_2"]["image_path"] %>" class="container-food-photo" alt="">
    <select class="container-selector" name="container-2">
      <% if(language=="en"){ %>
        <option value="bread" selected disabled>Choose other food</option>
        <option value="bread">Tomato</option>
        <option value="bread">Cucumber</option>
        <option value="bread">Sausage</option>
        <option value="bread">Other</option>
      <% } %>
      <% if(language=="am"){ %>
        <option value="bread" selected disabled>Ընտրել այլ ուտելիք</option>
        <option value="bread">Լոլիկ</option>
        <option value="bread">Վարունգ</option>
        <option value="bread">Երշիկ</option>
