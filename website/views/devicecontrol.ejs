    <script>
var steps = []
var div = document.getElementById("elements-place");
function insertAfter(referenceNode, newNode) {
  referenceNode.parentNode.insertBefore(newNode, referenceNode.nextSibling);
} 
function add_element(id)
{
  console.log(id);
  let element = document.createElement("img");
  element.style.cssText = `width: 90%; margin-left: 10px; margin-right: 10px; height: 13vw;`
  switch (id) {
    case "container-1":
      steps.push(1)
      element.src = "<%= data['container_1']['layer_image_path'] %>"
      break;
      
    case "container-2":
      steps.push(2)
      element.src = "<%= data['container_2']['layer_image_path'] %>"
      break;
      
      case "container-3":
        steps.push(3)
        element.src = "<%= data['container_3']['layer_image_path'] %>"
        break;
        
      case "container-4":
        steps.push(4)
        element.src = "<%= data['container_4']['layer_image_path'] %>"
        break;
    
      case "container-5":
        steps.push(5)
        element.src = "<%= data['container_5']['layer_image_path'] %>"
        break;
      case "container-6":
        steps.push(6)
        element.src = "<%= data['container_6']['layer_image_path'] %>"
        break;
      case "container-7":
        steps.push(7)
        element.src = "<%= data['container_7']['layer_image_path'] %>"
        break;

      case "container-8":
        steps.push(8)
        element.src = "<%= data['container_8']['layer_image_path'] %>"
        break;
      
      default:
        break;
        }
            console.log(steps);
            div.prepend(element)
          }
function back_step(){
  if (steps.length>1){
    steps.pop()
    document.getElementById('elements-place').removeChild(document.getElementById('elements-place').getElementsByTagName('img')[0]);
  }
}

function add_sandwich(steps) {
  for (let i = 0; i < steps.length; i++) {
    add_element(`container-${steps[i]}`)
  }
}

function delate_sandwich(){
  for (let i = 0; i < steps.length; i++) {
    try {
      document.getElementById('elements-place').removeChild(document.getElementById('elements-place').getElementsByTagName('img')[0]);  
    } catch (error) {
      console.error(error);
    }
    
  }
  steps=[]
}
function sandwich_with_everything() {
  delate_sandwich();
  newsteps = [1,2,3,4,5,6,7,8,1]
  add_sandwich(newsteps);
}
function sandwich_without_sauces() {
  delate_sandwich();
  newsteps = [1,2,3,4,7,8,1]
  add_sandwich(newsteps);
}
function sandwich_without_spices() {
  delate_sandwich();
  newsteps = [1,2,3,4,5,6,1]
  add_sandwich(newsteps);
}
function sandwich_without_sauces_and_spices() {
  delate_sandwich();
  newsteps = [1,2,3,4,1]
  add_sandwich(newsteps);
}




